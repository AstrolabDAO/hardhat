{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "types": [],
    "lib": ["dom", "es6", "es2021", "esnext"],
    "plugins": []
  },
  "include": ["*.ts", "*.js", "networks.json"],
  "exclude": ["node_modules", "dist", "cache", "artifacts", "deployments"]
}
