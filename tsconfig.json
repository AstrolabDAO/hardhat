{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "types": [],
    "lib": ["dom", "es6", "es2021", "esnext"],
    "plugins": [],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"],
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.json", "**/*.yaml"],
  "exclude": ["node_modules", "dist", "cache", "artifacts", "deployments"]
}
